<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CCE3E3E3" >

    <uk.co.transaxiom.android.txandroidlib.design.LightTextView
        android:id="@+id/description_TxtVw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
		android:textColor="@color/Tx_Comp_Orange"
		android:textSize="17sp"
        android:text="This is a very nice terminal verrry nice" />

    <uk.co.transaxiom.android.txandroidlib.design.LightTextView
        android:id="@+id/location_TxtVw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/description_TxtVw"
        android:gravity="center"
        android:textColor="@color/Tx_Comp_Orange"
		android:textSize="17sp"
        android:text="TextView" />

    <uk.co.transaxiom.android.txandroidlib.design.LightTextView
        android:id="@+id/active_TxtVw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/timestamp_TxtVw"
        android:layout_alignBottom="@+id/timestamp_TxtVw"
        android:layout_alignParentRight="true"
        android:text="Active: Yes"
        android:textColor="@color/Tx_Comp_Orange"
        android:textSize="17sp" />

    <uk.co.transaxiom.android.txandroidlib.design.LightTextView
        android:id="@+id/timestamp_TxtVw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/location_TxtVw"
        android:layout_toLeftOf="@+id/active_TxtVw"
        android:text="Created on: 2014-11-16"
        android:textColor="@color/Tx_Comp_Orange"
        android:textSize="17sp" />

</RelativeLayout>
