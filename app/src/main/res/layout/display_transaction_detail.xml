<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#CCE3E3E3" >

    <TextView
        android:id="@+id/appletSN_TxtVw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="Applet: ABCD-ABCD-ABCD-ABCD"
        android:paddingLeft="5dp"
        android:textColor="@color/black"
        android:textSize="15sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/terminalLocation_TxtVw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:paddingLeft="5dp"
                android:layout_gravity="start"
                android:gravity="start"
                android:text="Terminal Location is nice" />
            <TextView
                android:id="@+id/terminalTag_TxtVw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_gravity="end"
                android:gravity="end"
                android:paddingRight="5dp"
                android:text="ABCD-ABCD-ABCD-ABCD" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/transactionType_TxtVw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:paddingLeft="5dp"
                android:layout_gravity="start"
                android:gravity="start"
                android:text="Transaction Type: PURCHASE" />
            <TextView
                android:id="@+id/uploaded_TxtVw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_gravity="end"
                android:gravity="end"
                android:paddingRight="5dp"
                android:text="Uploaded: Yes" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="end"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/newBalance_TxtVw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:textSize="15sp"
            android:padding="5dp"
            android:textColor="#228B22"
            android:layout_gravity="end"
            android:textStyle="bold"
            android:gravity="end"
            android:paddingRight="5dp"
            android:text="INR 120.65" />

    </LinearLayout>

</LinearLayout>
