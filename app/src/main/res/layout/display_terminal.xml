<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Tx_Prim_Light_Blue" >

    <uk.co.transaxiom.android.txandroidlib.design.BoldTextView
        android:id="@+id/type_TxtVw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tag_TxtVw"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:layout_toLeftOf="@+id/tag_TxtVw"
        android:textColor="@color/white"
        android:paddingLeft="?android:attr/expandableListPreferredItemPaddingLeft"
        android:textSize="17sp"
        android:text="Type: Hellooo this is a terminal nice one" />

    <uk.co.transaxiom.android.txandroidlib.design.BoldTextView
        android:id="@+id/tag_TxtVw"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:text="Tag: 4DDD-0F05-EFFF-ABCD" />

